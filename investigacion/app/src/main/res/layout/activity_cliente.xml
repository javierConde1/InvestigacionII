<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente">

    <ImageButton
        android:id="@+id/btnAgregarSalon"
        android:layout_width="192dp"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="127dp"
        app:srcCompat="@android:drawable/ic_input_add"
        android:onClick="agregarEvento"
        />

    <ImageButton
        android:id="@+id/btnVerEventos"
        android:layout_width="188dp"
        android:layout_height="118dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnAgregarSalon"
        app:srcCompat="@android:drawable/ic_menu_view"
        android:onClick="VerEvento"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Eventos"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="186dp"
        android:text="Servicios"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/btnAgregarServicio"
        android:layout_width="192dp"
        android:layout_height="118dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:onClick="buscarServicio"
        />

    <ImageButton
        android:id="@+id/btnVerServicio"
        android:layout_width="188dp"
        android:layout_height="118dp"
        android:layout_alignTop="@+id/btnAgregarServicio"
        android:layout_toEndOf="@+id/btnAgregarSalon"
        app:srcCompat="@android:drawable/ic_menu_view"
        android:onClick="verServicio"
        />
</RelativeLayout>